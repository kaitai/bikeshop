= form_for @frame do |f|
  - if @frame.errors.any?
    #error_explanation
      %h2= "#{pluralize(@frame.errors.count, "error")} prohibited this frame from being saved:"
      %ul
        - @frame.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_area :name
  .field
    = f.label :brand
    = f.text_field :brand
  .actions
    = f.submit 'Save'
